<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="HungryPersistenceUnit" transaction-type="JTA">
        <jta-data-source>jdbc/mysql</jta-data-source>
        <class>entities.UserEntity</class>
        <class>entities.CustomerEntity</class>
        <properties>
            <property name="toplink.jdbc.url" value="jdbc:mysql://192.168.99.100:3306/hungry"/>
            <property name="toplink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://192.168.99.100:3306/hungry"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="openjpa.ConnectionURL" value="jdbc:mysql://192.168.99.100:3306/hungry"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.cj.jdbc.Driver"/>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://192.168.99.100:3306/hungry"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
        </properties>
    </persistence-unit>
</persistence>
